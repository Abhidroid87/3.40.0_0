{
  "manifest_version": 3,
  "name": "Manage - Task & Notes Dashboard",
  "version": "1.0.0",
  "description": "A comprehensive task and note management dashboard with AI-powered features for better productivity",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "optional_permissions": [
    "sidePanel",
    "contextMenus"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "models/*",
        "assets/*",
        "dist/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "dist/newtab.html"
  },
  "side_panel": {
    "default_path": "dist/sidepanel.html"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "dist/icons/icon16.png"
  },
  "action": {
    "default_icon": {
      "16": "dist/icons/icon16.png"
    },
    "default_title": "Manage Dashboard"
  }
}